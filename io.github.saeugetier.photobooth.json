{
    "app-id": "io.github.saeugetier.photobooth",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "qtbooth",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--device=all",
        "--filesystem=home",
        "--filesystem=/media",
        "--filesystem=/run/media",
        "--filesystem=/mnt",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "opencv4",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DBUILD_TESTS=OFF",
                "-DBUILD_PERF_TESTS=OFF",
                "-DBUILD_DOCS=OFF",
                "-DBUILD_LIST=imgproc,imgcodecs",
                "-DOPENCV_GENERATE_PKGCONFIG=ON",
                "-DOPENCV_LIB_INSTALL_PATH=/app/lib"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/opencv/opencv/archive/4.5.5.tar.gz",
                    "sha256": "a1cfdcf6619387ca9e232687504da996aaa9f7b5689986b8331ec02cb61d28ad"
                }
            ],
            "cleanup": [
                "/bin/*",
                "/share/*"
            ]
        },
        {
            "name": "onnxruntime",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/include ${FLATPAK_DEST}/lib",
                "cp -r include/* ${FLATPAK_DEST}/include",
                "cp -r lib/* ${FLATPAK_DEST}/lib"
            ],
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/microsoft/onnxruntime/releases/download/v1.21.0/onnxruntime-linux-x64-1.21.0.tgz",
                    "sha256": "7485c7e7aac6501b27e353dcbe068e45c61ab51fbaf598d13970dfae669d20bf"
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://github.com/microsoft/onnxruntime/releases/download/v1.21.0/onnxruntime-linux-aarch64-1.21.0.tgz",
                    "sha256": "4508084bde1232ee1ab4b6fad2155be0ea2ccab1c1aae9910ddb3fb68a60805e"
                }
            ]
        },
        {
            "name": "ncnn",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DNCNN_BUILD_TESTS=OFF",
                "-DNCNN_BUILD_EXAMPLES=OFF",
                "-DNCNN_BUILD_TOOLS=OFF",
                "-DNCNN_BUILD_BENCHMARK=OFF",
                "-DNCNN_SHARED_LIB=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Tencent/ncnn/archive/refs/tags/20250503.tar.gz",
                    "sha256": "3afea4cf092ce97d06305b72c6affbcfb3530f536ae8e81a4f22007d82b729e9"
                }
            ]
        },
        {
            "name": "qtvirtualkeyboard",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.qt.io/official_releases/qt/6.9/6.9.2/submodules/qtvirtualkeyboard-everywhere-src-6.9.2.tar.xz",
                    "sha256": "7b4100da01bafa72e20ab4e1459dcda1e6048e70b4d650b3c578613f0ffc11e3"
                }
            ],
            "post-install": [
                "rm -rd ${FLATPAK_DEST}/lib/${FLATPAK_ARCH}-linux-gnu/cmake",
                "rm -rd ${FLATPAK_DEST}/lib/${FLATPAK_ARCH}-linux-gnu/pkgconfig",
                "mv ${FLATPAK_DEST}/lib/${FLATPAK_ARCH}-linux-gnu/* /app/lib/",
                "rmdir ${FLATPAK_DEST}/lib/${FLATPAK_ARCH}-linux-gnu"
            ]
        },
        {
            "name": "yolo-models",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/models",
                "install -Dm644 *.onnx ${FLATPAK_DEST}/share/models/",
                "install -Dm644 coco.names ${FLATPAK_DEST}/share/models/",
                "for d in *_model; do cp -r \"$d\" ${FLATPAK_DEST}/share/models/; done"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/saeugetier/photobooth-model-zoo/releases/download/v0.1.0/yolo-models-v0.1.0.tar.gz",
                    "sha256": "48dd52be9d6ab57ce45e237e0a39fbe99275bd19e30a695df6db29e6b1ab65fb"
                }
            ]
        },
        {
            "name": "libgphoto2",
            "builddir": true,
            "cleanup": [
                "/doc",
                "*.la"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/gphoto/libgphoto2.git",
                    "tag": "v2.5.32",
                    "commit": "de1f0617b1ffa39c1980d1306343709c7dc0120e",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 12558,
                        "stable-only": true
                    }
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": [
                        "AUTOMAKE=\"automake --foreign\" autoreconf -vfis"
                    ]
                }
            ],
            "modules": [
                "shared-modules/libusb/libusb.json"
            ]
        },
        {
            "name": "qtbooth",
            "buildsystem": "qmake",
            "post-install": [
                "install -Dm644 io.github.saeugetier.photobooth.metainfo.xml -t ${FLATPAK_DEST}/share/metainfo",
                "install -Dm644 io.github.saeugetier.photobooth.desktop -t ${FLATPAK_DEST}/share/applications",
                "install -Dm644 io.github.saeugetier.photobooth.svg -t ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
